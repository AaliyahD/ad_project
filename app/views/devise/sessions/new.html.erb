<!DOCTYPE html>
<html>
<head> 
  <%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
   <link href="vendor/bootstrap-3.3.2-dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/login.css">
</head>
<body>

<div class="container">

<h2 class ="text-left"> &nbsp;&nbsp;Sign in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field col-lg-3">
   
    <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Email address"  %>


  <div class="field">
    <%= f.password_field :password,  autocomplete: "off", hide_label: true, placeholder: "Password"  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
        <div class="col-xs-0 ">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </div>
<% end %>


<%= render "devise/shared/links" %>

<%= link_to 'Administrator?', login_path %> 

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
      <script src="js/bootstrap.js"></script>

</body>
</html>
<div class="container">
      <!-- left column -->
  <style>

          body {
background-image:  url(/assets/ATFT.png);
background-repeat: no-repeat;
background-size: 80%; }
  </style>