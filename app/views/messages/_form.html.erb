<%=  render 'validation_errors', object: @message %>

<%= bootstrap_form_for [@message] do |f| %>

  
 <div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          
               <%= image_tag("enquiry.jpg", :alt => "Fitnessclass feed") %>
        </div>
      </div>    
           
<br> <br>      

<div class="col-md-2 personal-info">
<div class ="container">
 <div class="field input-group col-lg-7 col-lg-offset-0">
     <div class="input-group-addon">Subject</div>
    <%= f.text_field :subject, autofocus: true, :maxlength => 70, hide_label: true, placeholder: 'Add a subject'%> 
       
       
</div>
</div>
 <br>  <br>
<br>
<div class ="container">
<div class="form-group">
 <div class="input-group col-lg-7 col-lg-offset-0">
     <div class="input-group-addon">Body</div>
            <%= f.text_area :content, hide_label: true, :maxlength => 500, rows: 10 , placeholder: 'Add a message'%><br>

            
       
    </div> <div class = "col-lg-offset-2"><h4><small>Explain your concern in <b>500</b> characters or less.</h4></small><br>
   </div>
        <% end %>
 <br> <br>
        <div class ="container">
<div class="form-group">
        <div class="col-lg-9 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Send Message</button>
           <button type="submit" class="btn btn-default disabled">Save Draft</button>
        </div>
    </div>


 </div>

 </div>

