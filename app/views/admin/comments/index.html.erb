<head> 
<%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>

<div class="container">
    <h1>All Comments</h1> 
    <hr></h3>
</div>

<div class = "container">
<h4><div class="text-center"><%= paginate @comments %></div></h4>
</div>

<div class = "container">
<% @comments.each do |comment| %>
<h5 class = "text-center"><p>
<b>USER| </b> posted message on <b><%= comment.post.title %></b></p>
<p><%= comment.message %></p>
<p><%= link_to 'Delete', admin_comment_path(comment), method: :delete, data: {confirm: 'Are you sure you would like to delete this comment ?'} %></p></h5>

<hr>
<% end %>

</div>