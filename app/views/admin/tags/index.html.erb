<head> 
<%= stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<div class="container">
    <h1>All Tags</h1> 
    <hr>

<div class = "jumbotron text-center">
  <h2><b> One of the best ways to get noticed is to create an online trend !</b>
  	<a href = 'http://localhost:3000/admin/tags/new' class =  "btn btn-primary col-lg-offset-1]0 text-center  "> Create New Tag</a>
	</div>
  </div>
 

 		<div class = "container">
<h4><div class="text-center"><%= paginate @tags %></div></h4>
<table class="table table=bordered table hover">
	<thread>
		<tr>
			<th>name</th>
			<th>status</th>
			<th>created</th>
			<th>actions</th>
		</tr>
	</thread>
	<tbody>

		<% @tags.each do |tag| %>
			<tr>
				<td><%= tag.name %></td>
				<td><%= status_converter(tag.in_use?, truthy:'In Use', falsey: 'Not in Use') %></td>
				<td><%= time_ago tag.created_at %></td>
				<td>
					<%= link_to edit_admin_tag_path(tag) do %>
					<button type="button">Edit</button>
					<% end %>

					<%= create_deletable_button tag %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
</div>